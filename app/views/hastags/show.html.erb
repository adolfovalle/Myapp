<%- model_class = Hastag -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:etiqueta) %>:</strong></dt>
  <dd><%= @hastag.etiqueta %></dd>
  <dt><strong><%= model_class.human_attribute_name(:intencion) %>:</strong></dt>
  <dd><%= @hastag.intencion %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              hastags_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hastag_path(@hastag), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hastag_path(@hastag),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
