<h1>Listing tweets_hastags</h1>

<table>
  <thead>
    <tr>
      <th>Id tweet</th>
      <th>Id hastag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets_hastags.each do |tweets_hastag| %>
      <tr>
        <td><%= tweets_hastag.id_tweet %></td>
        <td><%= tweets_hastag.id_hastag %></td>
        <td><%= link_to 'Show', tweets_hastag %></td>
        <td><%= link_to 'Edit', edit_tweets_hastag_path(tweets_hastag) %></td>
        <td><%= link_to 'Destroy', tweets_hastag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweets hastags', new_tweets_hastag_path %>
