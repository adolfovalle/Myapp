<h1>Listing usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Id usuario</th>
      <th>Nombre</th>
      <th>Contador seguidores</th>
      <th>Descripcion</th>
      <th>Nick</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.id_usuario %></td>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.contador_seguidores %></td>
        <td><%= usuario.descripcion %></td>
        <td><%= usuario.nick %></td>
        <td><%= link_to 'Show', usuario %></td>
        <td><%= link_to 'Edit', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Destroy', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

