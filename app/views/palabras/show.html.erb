<%- model_class = Palabra -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:palabrac) %>:</strong></dt>
  <dd><%= @palabra.palabrac %></dd>
  <dt><strong><%= model_class.human_attribute_name(:intencionp) %>:</strong></dt>
  <dd><%= @palabra.intencionp %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              palabras_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_palabra_path(@palabra), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              palabra_path(@palabra),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
